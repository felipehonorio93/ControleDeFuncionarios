@model ControleDeFuncionarios.Mvc.Models.FuncionarioEdicaoModel
@{
    
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5>Cadastro de Funcionários</h5>
        <p>Preencha os dados do Funcionario</p>
        <hr />

        @using (Html.BeginForm("Edicao", "Funcionario", FormMethod.Post,
                   new{@enctype = "multipart/form-data" }))
        {
            <div>
                <!--Campo oculto-->
                @Html.HiddenFor(model=> model.IdFuncionario)
            </div>
                
            <div class="row-mb-3">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Nome do contato:</label>
                        @Html.TextBoxFor(model => model.Nome,
                    new
                    {
                    @class = "form-control"
                    })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Nome)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label>Email:</label>
                        @Html.TextBoxFor(model => model.Email,
                    new
                    {
                    @class = "form-control"
                    })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label>Telefone:</label>
                        @Html.TextBoxFor(model => model.Telefone,
                    new
                    {

                    @class = "form-control"

                    })

                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Telefone)
                        </div>

                    </div>

                </div>

            </div>

            <div class="row mb-3">

                <div class="col-md-3">
                    <label>Data de Nascimento:</label>
                    @Html.TextBoxFor(model => model.DataNascimento,
                new
                {
                @class = "form-control"
                })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.DataNascimento)
                    </div>
                </div>

                <div class="col-md-3">
                    <label>CPF:</label>
                    @Html.TextBoxFor(model=> model.Cpf,
                new
                {
                @class= "form-control"
                })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model=> model.Cpf)
                    </div>
                </div>

                <div class="col-md-3">
                    <label>Cargo:</label>
                    @Html.TextBoxFor(model=> model.Cargo,
                new
                {
                @class= "form-control"
                })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model=> model.Cargo)
                    </div>
                </div>


                <div class="col-md-3">
                    <label>Data de Admissao:</label>
                    @Html.TextBoxFor(model => model.DataAdmissao,
                new
                {
                @class = "form-control"
                })

                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.DataAdmissao)

                    </div>

                </div>
            </div>

            <div class="row mb-3">

                <div class="col-md-3">
                    <label>Salário:</label>
                    @Html.TextBoxFor(model => model.Salario,

                new
                {

                @class = "form-control",

                })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Salario)
                    </div>
                </div>

                <div class="col-md-9">
                    <label>Foto:</label>
                    <input type="file" name="Foto" class="form-control" />
                </div>

            </div>


            <div class="row mb-3">
                <div class="col-md-12">
                    <input type="submit" value="Salvar Alterções"class="btn btn-primary" />
                       &nbsp;
                       <a href="/Funcionario/Consulta" class="btn btn-light">Voltar para a Consulta</a>

                </div>
            </div>


        }
    </div>
</div>
@** conteudo especifico para a seção 'scripts' do layout *@
@section scripts {
    <script src="~/js/jquery-3.6.1.min.js"></script>
    <script src="~/js/jquery.maskedinput.min.js"></script>

    <script>
        $(document).ready(function() {
            $("#Telefone").mask("(99) 99999-9999");
            $("#DataNascimento").mask("99/99/9999");
            $("#DataAdmissao").mask("99/99/9999");
            $("#Cpf").mask("999.999.999-99");


        })
    </script>
}
